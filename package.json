{
  "private": true,
  "author": "azu",
  "license": "MIT",
  "name": "textlint-rule-preset-google",
  "version": "1.0.0",
  "description": "Google Developer Documentation Style Guide.",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "bootstrap": "pnpm install && pnpm run build",
    "clean": "rimraf dist-tools packages/*/lib",
    "build": "pnpm run build:tools && pnpm run build:packages",
    "build:tools": "tsc -p tsconfig.tools.json",
    "typecheck": "tsc --noEmit -p tsconfig.eslint.json",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format:check": "prettier --check '**/*.{js,jsx,ts,tsx,css,md,json,yml,yaml}'",
    "test": "vitest run --config vitest.config.ts",
    "publish": "pnpm run build && pnpm -r --filter \"./packages/*\" publish",
    "prettier": "prettier --write '**/*.{js,jsx,ts,tsx,css,md,json,yml,yaml}'",
    "precommit": "pnpm run typecheck && lint-staged",
    "build:packages": "pnpm -r --filter \"./packages/*\" exec tsc -p tsconfig.json",
    "watch": "pnpm -r --filter \"./packages/*\" exec tsc -p tsconfig.json --watch"
  },
  "keywords": [
    "textlintrule"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/textlint-rule/textlint-rule-preset-google-developer.git"
  },
  "bugs": {
    "url": "https://github.com/textlint-rule/textlint-rule-preset-google-developer/issues"
  },
  "homepage": "https://github.com/textlint-rule/textlint-rule-preset-google-developer",
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@textlint/types": "^15.5.2",
    "@types/node": "^25.3.0",
    "eslint": "^10.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "rimraf": "^6.1.3",
    "textlint-tester": "^15.5.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.0",
    "vitest": "^4.0.18"
  },
  "lint-staged": {
    "*.{js,jsx,mjs,cjs,ts,tsx,mts,cts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,md,json,yml,yaml}": [
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@10.30.1",
  "type": "module"
}
