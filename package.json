{
  "private": true,
  "author": "azu",
  "license": "MIT",
  "name": "textlint-rule-preset-google",
  "version": "1.0.0",
  "description": "Google Developer Documentation Style Guide.",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "bootstrap": "pnpm install && pnpm run build",
    "clean": "rimraf dist-tools packages/*/lib",
    "build": "pnpm run build:tools && pnpm -r --filter \"./packages/*\" --if-present run build",
    "build:tools": "tsc -p tsconfig.tools.json",
    "test": "pnpm -r --filter \"./packages/*\" --if-present run test",
    "publish": "pnpm -r --filter \"./packages/*\" publish",
    "prettier": "prettier --write '**/*.{js,jsx,ts,tsx,css,md,json,yml,yaml}'",
    "precommit": "lint-staged"
  },
  "keywords": [
    "textlintrule"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/textlint-rule/textlint-rule-preset-google-developer.git"
  },
  "bugs": {
    "url": "https://github.com/textlint-rule/textlint-rule-preset-google-developer/issues"
  },
  "homepage": "https://github.com/textlint-rule/textlint-rule-preset-google-developer",
  "devDependencies": {
    "husky": "^0.14.3",
    "lint-staged": "^7.2.0",
    "mocha": "^5.2.0",
    "prettier": "^1.8.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.13.10",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 4
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "packageManager": "pnpm@10.30.1"
}
