{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "strictNullChecks": true,
    "noCheck": false,
    "noEmit": true,
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "textlint-tester": ["packages/types/textlint-tester-shim.d.ts"],
      "@textlint-rule/textlint-report-helper-for-google-preset": [
        "packages/textlint-report-helper-for-google-preset/src/textlint-report-helper-for-google-preset.ts"
      ]
    }
  },
  "include": ["packages/**/*.ts", "tools/**/*.ts", "vitest.config.ts"],
  "exclude": ["node_modules", "dist-tools", "packages/**/lib"]
}
